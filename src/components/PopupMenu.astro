---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<script>
  document.addEventListener("open-modal", (event) => {
    const modal = document.querySelector("#modal");
    modal.classList.remove("hidden");
    const closeButtons = document.getElementsByClassName("close-button");
    for (const closeButton of closeButtons) {
      closeButton.addEventListener("click", () => {
        modal.classList.add("hidden");
      });
    }
  });
</script>

<div
  class="hidden fixed w-full h-full bg-black bg-opacity-70 z-50 top-0 left-0 grid place-content-center"
  id="modal"
>
  <div class="p-6">
    <div class="bg-[#2C2E3A] rounded-xl p-8">
      <div class="flex gap-10 justify-between mb-8">
        <h2 class="text-2xl font-bold">{title}</h2>
        <button
          class="bg-primary w-10 h-10 rounded-full text-white grid place-content-center ml-auto close-button"
        >
          <span class="block text-xl font-extralight">âœ•</span>
        </button>
      </div>
      <div>
        <slot />
      </div>
    </div>
  </div>
</div>
